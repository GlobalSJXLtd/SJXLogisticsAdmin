@model Sjx_Mvc.ViewModels.OrderViewModel


@if (TempData["successMessage"] != null)
{
    <script>alert('@TempData["successMessage"]');</script>

}

<style>
    #rcNum_div {
        display: none;
    }

    #brokerComp_div {
        display: none;
    }
</style>

<link href="~/css/site.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary w-75 regbg">
                <div class="card-header bg-dark">
                    <h3 class="card-title text-center  reg-header" style="margin-left:18rem">Create Order</h3>
                </div>
                <div class="card-body login-card-body">
                    @if (TempData["successMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <h4 style="font-size: 20px; margin-left:18rem">@TempData["successMessage"]</h4>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                    }
                    @if (TempData["errorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span style="font-size: 15px">@TempData["errorMessage"]</span>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    <form enctype="multipart/form-data" asp-action="CreateOrder" asp-controller="Order" method="post" id="register">
                        <div class="form-group" style="align-items:center">
                            <div class="col-lg-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">

                                <div class="col-md-5 mx-4">
                                    <div class="form-group">
                                        <label asp-for="RecieversName">RecieverName</label>
                                        <input type="text" asp-for="RecieversName" class="form-control" id="password" placeholder="Phone number">
                                        <span asp-validation-for="RecieversName" class="text-danger mx-auto"></span>
                                    </div>
                                </div>
                                <div class="col-md-5 mx-4">
                                    <div class="form-group">
                                        <label asp-for="RecieversPhone">RecieversPhone</label>
                                        <input type="text" asp-for="RecieversPhone" class="form-control" id="password" placeholder="Phone number">
                                        <span asp-validation-for="RecieversPhone" class="text-danger mx-auto"></span>
                                    </div>
                                </div>
                                <div class="col-md-5 mx-4">
                                    <div class="form-group">
                                        <label asp-for="CustomersEmail">CustomersEmail</label>
                                        <input type="text" asp-for="CustomersEmail" class="form-control" id="firstName" placeholder="Last Name">
                                        <span asp-validation-for="CustomersEmail" class="text-danger mx-auto"></span>
                                    </div>
                                </div>
                                <div class="col-md-5 mx-4">

                                    <div class="form-group">
                                        <label asp-for="Address">Start Address</label>
                                        <input type="text" asp-for="Address" class="form-control" id="txtEmpName" placeholder="Last Name">
                                        <span asp-validation-for="Address" class="text-danger mx-auto"></span>
                                    </div>
                                </div>
                                <div class="col-md-5 mx-4">

                                    <div class="form-group">
                                        <label asp-for="Destination">Destination</label>
                                        <input type="text" asp-for="Destination" class="form-control" id="firstName" placeholder="Last Name">
                                        <span asp-validation-for="Destination" class="text-danger mx-auto"></span>
                                    </div>
                                </div>
                                <div class="col-md-5 mx-4">

                                    <div class="form-group">
                                        <label asp-for="Distance">Distance</label>
                                        <input type="text" asp-for="Distance" class="form-control" id="firstName" placeholder="Last Name">
                                        <span asp-validation-for="Distance" class="text-danger mx-auto"></span>
                                    </div>
                                </div>



                                <div class="col-md-5 mx-4">
                                    <div class="form-group">
                                        <label asp-for="Email">CustormerEmail</label>
                                        <input type="text" asp-for="Email" class="form-control" id="email" placeholder="Email">
                                        <span asp-validation-for="Email" class="text-danger mx-auto"></span>
                                    </div>
                                </div>

                                <div class="col-md-5 mx-4">
                                    <div class="form-group">
                                        <label asp-for="PickUp">PickUp</label>
                                        <input type="text" asp-for="PickUp" class="form-control" id="firstName" data-url="https://autosuggest.search.hereapi.com/v1/discover?q=Lagos&lang=en&at=52.93175,12.77165&apiKey=cpLo9ydJuovc-Rice740q9bsEpQc-DbBYYD7C6k96lc&limt=30" placeholder="Pickup">
                                        <span asp-validation-for="PickUp" class="text-danger mx-auto"></span>
                                    </div>
                                </div>

                                <div class="col-md-5 mx-4">
                                    <div class="form-group">
                                        <label asp-for="Weight">Weight</label>
                                        <input type="number" asp-for="Weight" class="form-control" id="weight" placeholder="Weight">
                                        <span asp-validation-for="Weight" class="text-danger mx-auto"></span>
                                    </div>
                                </div>
                                <div class="col-md-5 mx-4">
                                    <div class="form-group">
                                        <label asp-for="Categories">Categories</label>
                                        <input type="text" asp-for="Categories" class="form-control" id="phoneNumber" placeholder="Category">
                                        <span asp-validation-for="Categories" class="text-danger mx-auto"></span>
                                    </div>
                                </div>
                                <div class="col-md-5 mx-4">
                                    <div class="form-group">
                                        <label asp-for="Delivery">Delivery</label>
                                        <input type="text" asp-for="Delivery" class="form-control" id="weight" placeholder="Delivery">
                                        <span asp-validation-for="Delivery" class="text-danger mx-auto"></span>
                                    </div>
                                </div>
                                <div class="col-md-5 mx-4">
                                    <div class="form-group">
                                        <label asp-for="Address"> Customer Address</label>
                                        <input type="text" asp-for="Address" class="form-control" id="weight" placeholder="Address">
                                        <span asp-validation-for="Address" class="text-danger mx-auto"></span>
                                    </div>
                                </div>


                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer text-center mt-5">
                            <button type="submit" class="btn btn-outline-dark px-5">Order</button>
                        </div>
                    </form>


                </div>



            </div>


        </div>

    </div>


    <script>
        function showDiv(brokerCompId, rcNumId, element) {
            document.getElementById(brokerCompId).style.display = element.value == 4 ? 'block' : 'none';
            document.getElementById(rcNumId).style.display = element.value == 4 ? 'block' : 'none';
        }
    </script>









